extends ../layouts/main

block content
    .container
        .row
            .col-md-6.col-md-offset-3
                form.well(action="/auth/login", method="post")
                    .form-group.text-right
                        p
                            | Don't have an account yet?
                            |   
                            a.text-primary(href="/registration") 
                                strong Sign up now!
                    hr
                    .form-group
                        label.form-label Email
                        input.form-control(type="email", name="email")
                    .form-group
                        label.form-label Password
                        input.form-control(type="password", name="password")
                    hr
                    .form-group.text-center
                        button.btn.btn-lg.btn-primary(type="submit") Log in
                        a.btn.btn-lg.btn-primary(href="/auth/google")
                            span.fa.fa-google-plus-square
                        a.btn.btn-lg.btn-primary(href="/auth/facebook")
                            span.fa.fa-facebook-square
                        a.btn.btn-lg.btn-primary(href="/auth/github")
                            span.fa.fa-github-square
