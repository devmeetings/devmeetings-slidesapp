extends ../layouts/main

block content
    .container
        .row
            .col-md-6.col-md-offset-3
                form.well(action="/registration", method="post")
                    .form-group
                        h2= title
                    .form-group
                        .alert-error #{message}
                    .form-group
                        label.form-label Username
                        input.form-control(type="text", name="username", required=true)
                    .form-group
                        label.form-label Email
                        input.form-control(type="email", name="email", required=true)
                    .form-group
                        label.form-label Password
                        input.form-control(type="password", name="password", required=true)
                    hr
                    .form-group.text-center
                        button.btn.btn-lg.btn-primary(type="submit") Create
