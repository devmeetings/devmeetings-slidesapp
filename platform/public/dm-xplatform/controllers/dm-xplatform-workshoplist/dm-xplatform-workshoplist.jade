.container
    .col-md-12
        .dm-workshoplist-container
            .row
                .col-md-4(ng-if='editMode')
                    .workshoplist-col
                        .workshopdesc-detailsholder
                            .whoplist-details
                                span.fa.fa-4x.fa-plus.text-success(ng-click='create()')

                .col-md-4(ng-repeat="cours in courses | orderBy:['order','title']", ng-if='cours.visible || editMode')
                    .workshoplist-col
                        .workshoplist-thumb
                            a(ui-sref='index.space({event: cours._id})',
                                analytics-category='courses',
                                analytics-on="click", analytics-event="courses.go", analytics-label="{{cours.title}}")
                                img.img-responsive(ng-src="{{cours.image}}")
                        .workshopdesc-detailsholder
                            .workshoplist-details
                                .workshoplist-details-shadow
                                h4
                                    a(ui-sref='index.space({event: cours._id})',
                                        analytics-category='courses',
                                        analytics-on="click", analytics-event="courses.go", analytics-label="{{cours.title}}")
                                        | {{cours.title}}
                                span.fa.fa-2x.fa-trash.text-danger.pull-right(ng-if='editMode', ng-click='remove(cours)', ng-style='{"z-index": "10"}')
                                input(ng-if='editMode', type='checkbox', ng-model='cours.visible', ng-change='visibilityChanged(cours)')

