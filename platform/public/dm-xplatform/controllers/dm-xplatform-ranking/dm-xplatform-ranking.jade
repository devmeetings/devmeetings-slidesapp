.col-xs-12.full-height
    h2 Ranking
    .row.dm-ranking
        table.table
            thead
                tr
                    th #
                    th(ng-repeat='i in event.iterations', colspan='{{activeIteration === $index ? i.tasks.length : 1}}') {{i.title}}
            tbody
                tr(ng-repeat='person in ranking.people')
                    th {{person.name}}
                    td(ng-repeat='i in event.iterations.slice(0, activeIteration)') {{personIterationCount(person, i)}}
                    td(ng-repeat='task in event.iterations[activeIteration].tasks', ng-class='{"done-task": personDidTask(person, task)}') {{task.title}}
                    td(ng-repeat='i in event.iterations.slice(activeIteration + 1, tasks.length)') {{personIterationCount(person, i)}}

