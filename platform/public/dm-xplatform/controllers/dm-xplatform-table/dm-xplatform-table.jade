div.col-lg-12.col-md-12.dm-table-container
    table.table.dm-table
        tr
            th Temat szkolenia
            th Technologia
            th Ukonczyli tutorial 
        tr(ng-repeat='event in events | filter: xplatformData.navbar.searchText | orderBy: "title"')
            td
                .dm-table-slides 
                    span(ng-repeat='slide in event.slides', ui-sref='index.task({id: slide.slideId})')
                        i.fa.fa-circle-o.dm-table-gray(ng-if='!slide.done')
                        i.fa.fa-circle.dm-table-green(ng-if='slide.done')
                p.dm-table-blue(ui-sref='index.player.chapter({id: event.trainingId, index: "0", event: event._id})') {{event.title}}
            td
                p.dm-table-green {{event.technology}}
            td.dm-table-avatars 
                div 
                    img(ng-repeat='user in event.peopleFinished.slice().reverse() | limitTo: 4', ng-src='{{user.avatar | dmGravatar:25}}', ui-sref='index.devhero({id: user.userId})')
                    span(ng-if='event.peopleFinished.length > 4', ng-click='showUsers(event.peopleFinished)') + {{event.peopleFinished.length - 4}}
