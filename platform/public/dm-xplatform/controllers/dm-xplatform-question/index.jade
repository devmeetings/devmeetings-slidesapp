.list-group
    .list-group-item.dm-question-item(ng-repeat='question in questions | orderBy: "-timestamp"')
        small.pull-right(am-time-ago='question.timestamp')
        p {{question.description}}
        button.btn.btn-default.btn-sm(ng-if='question.slidesave', ui-sref='index.space.task({slide: question.slidesave})') Kod
        button.btn.btn-primary.btn-sm(ng-if='question.comments.length < 1', ng-click='showAnswers(question)') Pomagam
        button.btn.btn-primary.btn-sm(ng-if='question.comments.length > 0', ng-click='showAnswers(question)') {{question.comments.length}} odpowiedzi

