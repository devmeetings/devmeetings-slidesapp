accordion
    accordion-group(ng-repeat='question in questions | orderBy: "-timestamp"')
        accordion-heading
            div(ui-sref='index.space.task({slide: question.slidesave})')
                small.pull-right(am-time-ago='question.timestamp')
                p {{question.description}}
        .row
            .list-group
                .list-group-item(ng-repeat='comment in question.comments', ui-sref='index.space.task({slide: comment.slidesave})')
                    p {{comment.text}}
        form(ng-submit='createComment(question)')
            .form-group
                .input-group
                    input.input-sm.form-control(ng-model='question.text')
                    span.input-group-btn
                        button.btn.btn-primary.btn-sm(type='submit') Odpowiedz

