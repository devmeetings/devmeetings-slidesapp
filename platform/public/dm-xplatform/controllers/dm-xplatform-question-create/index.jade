.modal-body
    h3 Zadaj pytanie
    hr

    form(ng-submit='createQuestion()')
        .form-group
            label Pytanie
            input.input-sm.form-control(ng-model='question.description', type='text', required)
        .form-group
            .checkbox
                label
                    input(ng-model='question.workspace', type='checkbox')
                    | Załącz workspace
        button.btn.btn-sm.btn-primary(type='submit') Wyślij
        button.btn.btn-sm.btn-default(type='button', ng-click='$dismiss()') Anuluj

