.modal-body
    h3 Zadaj pytanie
    hr

    form(ng-submit='createQuestion()')
        .form-group
            label Tytuł
            input.input-sm.form-control(ng-model='question.title', type='text', required)
        .form-group
            label Pytanie
            textarea.input-sm.form-control(ng-model='question.description', rows='3', required)
        .form-group
            .checkbox
                label
                    input(ng-model='question.workspace', type='checkbox')
                    | Załącz workspace
        button.btn.btn-sm.btn-primary(type='submit') Wyślij

