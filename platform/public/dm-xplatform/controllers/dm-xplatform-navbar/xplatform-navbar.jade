.navbar.navbar-inverse.xplatform-navbar(role='navigation')
    .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-inverse-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

    .navbar-center.input-search(ng-if="!navbar.showTitle")
        img.ico-search(src="static/images/navbar/ico_search.png")
        input(type='text', placeholder='Szukaj szkoleń, ludzi, trenerów...', ng-model='navbar.searchText')
        img.ico-triangle(src="static/images/navbar/input_search_triangle.png")
    .navbar-center(ng-if="navbar.showTitle")
        span.nav-title
            | {{navbar.title}}

    .collapse.navbar-collapse.navbar-inverse-collapse
        ul.nav.navbar-nav.navbar-left
            li
                a(href='#')
                    img(src="static/images/navbar/xplatform_logo.png")

        ul.nav.navbar-nav.navbar-right
            //-li
                a(href='#')
                    img(src="static/images/navbar/ico_bell.png")
                    span.badge.badge-notification 3
            //-li
                a(href='#')
                    img(src="static/images/navbar/ico_msg.png")
                    span.badge.badge-notification 7
            li
                img.avatar-holder(gravatar-src="navbar.user.email", gravatar-size="30")
            li
                a.ng-cloak(ui-sref="navbar.devhero")
                    | {{navbar.user.name}}
            li
                .dropdown
                    #dropdownNav.dropdown-toggle(type='button', data-toggle='dropdown')
                        span.glyphicon.glyphicon-cog
                    ul.dropdown-menu(role='menu', aria-labelledby='dropdownNav')
                        li(role='presentation')
                            a(href="/logout", role='menuitem', tabindex='-1')
                                | Logout

div(ui-view='content')

