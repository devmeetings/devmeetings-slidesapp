

mixin tabContent(name, mode)
  .tab-pane.fade(ng-class="{'active in': active === '#{name}' }")
    .editor(class="editor-#{name} editor-{{ fiddle.size}}", data-mode="#{mode}", data-content="#{name}")
.row.slide-workspace
  div(ng-class="{'col-sm-12': hideOutput, 'col-sm-6': !hideOutput }")
    ul.nav.nav-tabs
      li(
        ng-repeat="(tabName, tab) in workspace.tabs",
        ng-class="{'active': workspace.active === tabName }"
        )
        a.pointer(ng-click="workspace.active = tabName") {{ tabName.replace('|', '.') }}

    .tab-content
      .tab-pane.active.fade.in
        .editor(class="editor-{{ workspace.size || 'md' }}")
    .errors.alert.alert-danger.errors-fiddle {{ errors }}

  .col-sm-6(ng-class="{ 'hidden': hideOutput }")
    slide-workspace-output
