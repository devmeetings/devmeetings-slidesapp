.row.slide-workspace.full-height
    .full-height(ng-class="{'col-sm-12': hideOutput, 'col-sm-6': !hideOutput }")
        .row.full-height
            ul.nav.nav-tabs
                li.workspace-tab(
                    ng-repeat="tabName in workspace.tabs |objectKeys|orderBy:tabsOrdering",
                    ng-class="{'workspace-tab-active': workspace.active === tabName }")
                    a.cursor-pointer(ng-click="workspace.active = tabName") {{ tabName.replace('|', '.') }}
                    a.cursor-pointer.workspace-tab-close(ng-click="removeTab(tabName)", tooltip="Delete file", tooltip-placement="right")
                        | x
                    a.cursor-pointer.workspace-tab-edit(ng-click="editTabName(tabName)", tooltip="Edit file name", tooltip-placement="right")
                        span.fa.fa-pencil
                li.add-tab
                    a.cursor-pointer(ng-click="insertTab()")
                        | +

            .tab-content
                .tab-pane.active.fade.in.scrollable-container
                    .editor.ace_editor(class="editor-{{ workspace.size || 'md' }}")
                .errors.alert.alert-danger.errors-fiddle {{ errors }}

    .col-sm-6.full-height(ng-class="{ 'hidden': hideOutput }")
        .row.full-height
            slide-workspace-output.full-height

