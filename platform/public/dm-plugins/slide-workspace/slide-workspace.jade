.row.slide-workspace.full-height
    .sw-col.full-height(
        ng-class="{'col-sm-12': !output.sideBySide, 'col-sm-10': output.width == 2,'col-sm-8': output.width == 4,'col-sm-6': output.width == 6,'side-by-side': output.sideBySide }")
        .row.full-height
            ul.nav.nav-tabs
                li.workspace-tab.workspace-tab-output.pull-right(
                    ng-if="!output.sideBySide", ng-class="{'workspace-tab-active': output.show}")
                    a.cursor-pointer(ng-click="output.show = true")
                        | Preview
                li.workspace-tab(
                    ng-repeat="tabName in workspace.tabs |objectKeys|orderBy:tabsOrdering",
                    ng-class="{'workspace-tab-active': workspace.active === tabName && !output.show }")
                    a.cursor-pointer(
                        ng-click="workspace.active = tabName;output.show = false") 
                        | {{ toFileName(tabName) }}
                    a.cursor-pointer.workspace-tab-close(ng-click="removeTab(tabName)", tooltip="Delete file", tooltip-placement="right")
                        | x
                    a.cursor-pointer.workspace-tab-edit(ng-click="editTabName(tabName)", tooltip="Edit file name", tooltip-placement="right")
                        span.fa.fa-pencil
                li.add-tab
                    a.cursor-pointer(ng-click="insertTab()")
                        | +
                li.workspace-tab.workspace-sidebyside.pull-right
                    a.cursor-pointer(ng-click="changeWidth()")
                        span.fa.fa-arrows-h
                li.workspace-tab.workspace-download.pull-right
                    a.cursor-pointer(ng-href="/api/download/{{output.hash}}")
                        span.fa.fa-download

            .tab-content(ng-show="!output.show")
                .tab-pane.active.fade.in.scrollable-container
                    .editor.ace_editor(class="editor-{{ workspace.size || 'md' }}")
                .errors.alert.alert-danger.errors-fiddle {{ errors }}
            .tab-content(ng-show="output.show", ng-if="!output.sideBySide")
                slide-workspace-output.full-height    

    .sw-col.full-height(
        ng-if="output.sideBySide"
        ng-class="{'col-sm-2': output.width == 2, 'col-sm-4': output.width == 4, 'col-sm-6': output.width == 6}"
        )
        .row.full-height
            slide-workspace-output.full-height

