.col-md-12
  .col-md-3
    .col-md-12
      ul.list-group
        li.list-group-item(ng-repeat='recording in recordings', ng-click='onRecordingSelected($index)') 
          span.badge
            | {{recording.slides.length}}
          | {{recording.slideId}}
    .col-md-12
      button.btn.btn-default(ng-class="{'btn-primary': play}", ng-click="play=true")
        | PLAY  
      button.btn.btn-default(ng-class="{'btn-primary': !play}", ng-click="play=false")
        | PAUSE


  .col-md-9
    plugins-loader(namespace="'slide'", context="slide")
  .col-md-6
  .col-md-6
