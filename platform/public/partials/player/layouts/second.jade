style.
  .full-screen-mode {
    margin: 3em auto;
    position: relative;
    width: 1080px;
    height: 700px;
  }
  .full-screen-mode::after {
    content: '';
    display: table;
    clear: both;
  }

  .full-screen-mode .on-top {
    z-index: 5;
  }

  .full-screen-mode .video-js {
    position: absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    z-index: 2;
  }
  .full-screen-mode plugins-loader {
    position: absolute;
    top: 10px;
    left:30px;
    right:30px;
    bottom: 50px;
    z-index: 1; 
    background: #000;
  }
  .full-screen-mode .navi {
    position: absolute;
    top: -50px;
    left:0;
    right: 0;
    height: 50px;
  }
.row
  .full-screen-mode
    include navi.jade
    videojs(height="700", src='"https://www.youtube.com/watch?v=cpBRAZ7RJvc"', current-second="state.currentSecond", is-playing="state.isPlaying", should-update-time='true', controls='true')
    plugins-loader(ng-class="{'on-top': !state.isPlaying}", namespace="'slide'", context="slide")
.row
  .col-md-4.col-md-offset-4
    button.btn.btn-block(ng-click="state.isPlaying = !state.isPlaying", ng-class="{'btn-primary': !state.isPlaying, 'btn-default': state.isPlaying}")
      span(ng-hide="state.isPlaying")
        span.fa.fa-play
        | 
        span Play
      span(ng-show="state.isPlaying")
        span.fa.fa-pause
.row
  .col-md-12
    videojs(src='"http://youtu.be/hc8XeUE-1Io"', current-second="state.currentSecond", is-playing="state.isPlaying", delay="state.secondVideoDelay", height="400")