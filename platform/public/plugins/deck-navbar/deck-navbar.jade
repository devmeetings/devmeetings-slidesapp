nav.navbar.navbar-default.navbar-slides(role='navigation')
  .navbar-header
    ul.nav.navbar-nav.nav-slides
      a.navbar-brand.text-muted(href='/')
        span.glyphicon.glyphicon-th-large
      li(ng-repeat="slide in slides", ng-class="{ 'active' : slide._id === csm.activeSlideId}")
        a(href='\#{{slide._id}}') 
          | {{ slide.content.name }}

    ul.nav.navbar-nav(ng-if="$root.editMode")
      li
        a(ng-click="addSlide()")
          span.glyphicon.glyphicon-plus
  
