.container-fluid
  .row
    .col-sm-5
      with currentItem
        +EventRowDetails
    .col-sm-7
      hr.visible-xs
      // h3.text-center #{event.eventTitle}
      // h5.text-muted.text-center {{asDate event.eventDate}}
      if event.announcement
        h3 #{event.announcement}
      .container-fluid
        each mapItems
          +EventRow
  .row
    .col-xs-12
      .pull-left
        if isAdmin
          h6
            a(href="/live/admin/admin/EventTimings/{{event._id}}/edit") edit
      .pull-right
        if isAdmin

          unless currentItem
            button.btn.btn-link.btn-xs(role="togglePlanningMode")
              span.fa.fa-fw.fa-calendar
              span Toggle planning Mode
          else
            button.btn.btn-link.btn-xs(role="finishEvent")
              span.fa.fa-fw.fa-stop
              span Finish Event
          
