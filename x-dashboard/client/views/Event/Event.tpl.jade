.container-fluid
  .row
    .col-sm-5
      with currentItem
        +EventRowDetails
    .col-sm-7
      hr.visible-xs
      h3.text-center #{event.eventTitle}
      h3(style="display:none") 
        a(href="/live/admin/admin/EventTimings/{{event._id}}/edit") #{event._id}
      h5.text-muted.text-center {{asDate event.eventDate}}
      if event.announcement
        h3 #{event.announcement}
      table.table
        tbody
          each mapItems
            +EventRow
