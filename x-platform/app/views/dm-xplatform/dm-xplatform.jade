extends ../layouts/main

append head
    base(href="/")
append scripts
    script(src='/static/components/requirejs/require.js')
    script(src='/static/config.js?v=#{cacheBustingVersion}')
    script(src='#{jsModulesPath}/dm-xplatform/dm-xplatform#{cacheBustingVersion}.js')

block content
    .full-height(ng-init='$root.isLoggedIn=#{isLoggedIn}; $root.editMode=#{editMode}')
        dm-online(is-online='!$root.isOffline')
        div(ui-view='navbar')
        .content-height(ui-view='content', ng-class="{'header-hidden': $root.headerHidden}")
