extends ../layouts/main

append head
    base(href="/")
append scripts
    script(src='/static/jspm_packages/system.js?v=#{cacheBusingVersion}')
    script(src='/static/jspm.config.js?v=#{cacheBusingVersion}')
    script.
      System.import('dm-xplatform/dm-xplatform#{cacheBustingVersion}').then(function(){}, function(err){
        throw err;
      });

block content
    .full-height(ng-init='$root.isLoggedIn=#{isLoggedIn}; $root.editMode=#{editMode}')
        dm-online(is-online='!$root.isOffline')
        div(ui-view='navbar')
        .content-height(ui-view='content', ng-class="{'header-hidden': $root.headerHidden}")
