extends ../layouts/main

block content
    .container
        .registration-holder
            form(action="/registration", method="post")
                .col-md-12
                    .registration-header
                        | Register
                        span.login-switch.pull-right
                            a(href="/login") 
                                | Log in

                    .form-group
                        .alert-error
                            strong #{message}
                    .form-group
                        .ico-holder
                            img.ico-sub.ico-user(src='static/images/login/ico_user.png')
                        input.form-control.form-login(type="text", name="username", placeholder="Your name", required=true, autofocus)
                    .form-group
                        .ico-holder
                            img.ico-sub.ico-user(src='static/images/login/ico_user.png')
                        input.form-control.form-login(type="email", name="email", placeholder="Your e-mail", required=true)
                    .form-group
                        .ico-holder
                            img.ico-sub.ico-password(src='static/images/login/ico_password.png')
                        input.form-control.form-login(type="password", name="password", placeholder="Your password", required=true)
                
                .row
                    .col-md-12.text-center.btn-send-holder
                        button.btn.btn-primary.btn-reg(type="submit") Register
