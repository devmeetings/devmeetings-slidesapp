include ./workspace-layout.mixins.jade

.full-height
  .sw-col.full-height(ng-style="{width: output.leftSize}")
    .editor-focusable.sw-row(
      ng-style="{height: output.topSize}",
      ng-class="{'editor-focus': workspace.active === layout.options[0] }")
      +editor(0)
    sw-splitter(left="output.topSize", right="output.bottomSize", drag-active="output.dragActive", is-row="true")
    .editor-focusable.sw-row(
      ng-style="{height: output.bottomSize}",
      ng-class="{'editor-focus': workspace.active === layout.options[1] }")
      +editor(1)
  sw-splitter(left="output.leftSize", right="output.rightSize", drag-active="output.dragActive")
  .sw-col.full-height(ng-style="{width: output.rightSize}")
    .overlay(ng-if="output.dragActive")
    slide-workspace-output.full-height



