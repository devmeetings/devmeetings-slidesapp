            class="{{ 'type-' + getType(tabName) }}",
            ng-click="workspace.active = tabName;output.show = false") 
            span.fa.fa-circle.type-icon
            |  {{ toFileName(tabName) }}
        a.cursor-pointer.workspace-tab-close(ng-click="removeTab(tabName)", 
            tooltip="Delete", tooltip-placement="right",
              analytics-event="workspace-deleteTab", analytics-category="workspace")
            | x
        a.cursor-pointer.workspace-tab-edit(ng-click="editTabName(tabName)", 
            tooltip="Edit name", tooltip-placement="right",
            analytics-event="workspace-editTab", analytics-category="workspace")
          span.fa.fa-pencil
            
      li.workspace-tab.add-tab
