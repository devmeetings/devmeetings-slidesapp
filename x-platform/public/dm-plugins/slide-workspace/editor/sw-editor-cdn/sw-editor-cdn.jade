li.sw-editor-cdn.cdn-dropdown.workspace-tab.workspace-tab-condensed(
    ng-show='cdn.cdnLibraries.length >= 1 && cdn.activeTabName ==="index|html"'
    dropdown=''
  )
  a.cursor-pointer(
      dropdown-toggle='' 
      tooltip="Select library"
      tooltip-animation="false"
      tooltip-placement="bottom"
      tooltip-append-to-body="true"
    )
    span.fa.fa-code 
  ul.dropdown-menu(role='menu')
    li(ng-repeat='library in cdn.cdnLibraries track by $index')
      a(ng-click='cdn.selectLibrary(library)')
        | {{ library.name }}


