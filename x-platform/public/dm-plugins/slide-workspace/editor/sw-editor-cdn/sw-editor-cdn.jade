li.sw-editor-cdn.cdn-dropdown.workspace-tab.workspace-tab-condensed(
    dropdown=''
  )
  a.cursor-pointer(
      dropdown-toggle='' 
      tooltip="Select library"
      tooltip-animation="false"
      tooltip-placement="bottom"
      tooltip-append-to-body="true"
      ng-disabled='!cdn.whenHtmlFile(cdn.activeTabName) || !cdn.cdnLibraries.active'
    )
    span.fa.fa-code 
  ul.dropdown-menu(role='menu')
    li(ng-repeat='library in cdn.getLibraries() track by $index')
      a(
          ng-click='cdn.selectLibrary(library)'
        )
        | {{ library.name }}


