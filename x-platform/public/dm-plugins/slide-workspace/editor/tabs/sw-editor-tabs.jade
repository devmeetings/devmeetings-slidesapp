    selected-node="node1"
    )
    | employee: {{node.name}} age {{node.age}}

  treecontrol.tree-classic(
    ng-show="model.showTreeview"
    tree-model="model.structure"
    options="treeOptions"
    on-selection="model.activateTab(node.path)"
    )
    //span.fa-fw.workspace-tab-icon
      span.text-muted.fa.fa-close.cursor-pointer(
        ng-show="model.isFile(node) && hover.mouseOverFile"
        ng-mouseleave="hover.mouseOverFile = false"
        ng-click="model.removeTab(node.path); $event.stopPropagation()", 
        tooltip="Delete", tooltip-placement="bottom",tooltip-animation='false', tooltip-append-to-body="true",
        analytics-event="workspace-deleteTab", analytics-category="workspace")
    span(
      ng-hide="model.isFile(node)"
      ng-mouseover="hover.mouseOverDir = true"
      )
      | {{ model.setExtensionsAfterDots(node.name) }} 
    span(
      ng-show="model.isFile(node)"
      ng-class="{'highlight': model.activeTabName === node.path}"
      ng-mouseover="hover.mouseOverFile = true"
      ng-mouseleave="hover.mouseOverFile = false"
      )
      span.fa-fw.workspace-tab-icon
        span.text-muted.fa.fa-close.cursor-pointer(
          ng-show="model.isFile(node) && hover.mouseOverFile"
          ng-click="model.removeTab(node.path); $event.stopPropagation()", 
          tooltip="Delete", tooltip-placement="bottom",tooltip-animation='false', tooltip-append-to-body="true",
          analytics-event="workspace-deleteTab", analytics-category="workspace")
      | {{ model.setExtensionsAfterDots(node.name) }} 
    div.cursor-pointer.transition(
      ng-if="!model.isFile(node) && hover.mouseOverDir"
      ng-show="hover.mouseOverDir"
      ng-click="model.insertTabIfTreeview(node.path); $event.stopPropagation()"
      tooltip="Add New into this Directory"
      tooltip-placement="right"
      tooltip-animation="false"
      tooltip-append-to-body="true"
      ng-class="{'green': hover.mouseOverDir}"
      )
      | + Add 
    div.cursor-pointer.transition(
      ng-mouseleave="hover.mouseOverDir = false"
      ng-if="!model.isFile(node) && hover.mouseOverDir"
      ng-show="hover.mouseOverDir"
      ng-click="model.removeDirectory(node); $event.stopPropagation()"
      tooltip="Remove Directory with all Content"
      tooltip-placement="right"
      tooltip-animation="false"
      tooltip-append-to-body="true"
      ng-class="{'red': hover.mouseOverDir}"
      )
      span.fa.fa-trash
        | Remove 

  .workspace-tab.add-tab(
    ng-show="model.showTreeview"
    )
    .cursor-pointer(
      ng-click="model.insertTab()"
      tooltip="Add New File"
      tooltip-placement="right"
      tooltip-animation="false"
      tooltip-append-to-body="true"
      )
      | +

