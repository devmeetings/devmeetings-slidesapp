.full-height.slide-workspace-output2(
    ng-animate,
    ng-class="{'slide-workspace-output-dialog' : outputDialog}"
  )
  a.cursor-pointer.expand-btn.text-muted(
      ng-click="outputDialog = !outputDialog")
    span.fa.fa-expand(ng-hide="outputDialog")
    span.fa.fa-compress(ng-show="outputDialog")
  input.form-control(
    type="text", 
    ng-show="fiddle.url", 
    ng-model="fiddle.url.addressTemp",
    ng-change="updateAddress()")

  .loading-spinner(ng-if="isWaiting")
    span.fa.fa-spin.fa-spinner.fa-3x
  .slide-workspace-outputs.full-height
    iframe.iframe-fiddle-output.scrollable-container(ng-class="{'frame-background': workspace.withBackground}")
    iframe.iframe-fiddle-output.scrollable-container(ng-show="!workspace.singleOutput",ng-class="{'frame-background': workspace.withBackground}")
