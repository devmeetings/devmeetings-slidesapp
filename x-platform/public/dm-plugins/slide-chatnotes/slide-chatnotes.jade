.col-xs-12
  a.btn.btn-link.cursor-pointer(
    ng-if="model.notes.notes.length > model.getLimitThreshold()"
    ng-click="model.showingAll = !model.showingAll"
    )
    span(ng-show="!model.showingAll") Show all
    span(ng-show="model.showingAll") Hide
  .list-group
    .list-group-item(
      ng-repeat="note in model.notes.notes | limitTo:model.getCurrentLimit(model.showingAll)"
      )
      a.pull-right(
        ng-if="$root.editMode || $root.modes.isEditMode"
        ng-click="model.removeNote(model.notes.notes, note)"
        )
        span.fa.fa-fw.fa-times
      div(
        marked="note"
        )
    .list-group-item(
      marked="model.notes.current"
      )
  form(
    ng-if="model.mode !== 'player'"
    ng-submit="model.addNote()"
    )
    .form-group
      .input-group
        input.form-control(
          ng-model="model.notes.current"
          placeholder="Your notes"
          )
        .input-group-btn
          button.btn.btn-default(type="submit")
            span.fa.fa-send
      
