mixin slideCell(trashAction)
  a.pull-right.hover-content.cursor-pointer(ng-click="#{trashAction}")
    span.glyphicon.glyphicon-trash.text-danger
  label.text-primary
    | {{slide.content.name}} - {{slide.content.title}}<br/>
  | {{slide._id}}


.col-xs-4
  .panel.panel-primary
    .panel-heading
      h3.panel-title Zestawy slajd√≥w
      .form-group
      form.input-group(ng-submit="addDeck()")
        input.form-control(placeholder="Deck title", ng-model="deckTitle")
        span.input-group-btn
          button.btn.btn-success
            |  Create new Deck 
    .panel-body
      ul.list-group 
        li.list-group-item.hover-trigger(ng-repeat="deck in decks")
          a.pull-right.hover-content.cursor-pointer(ng-click="removeDeck(deck._id)")
            span.glyphicon.glyphicon-trash
          a.btn.btn-default.btn-xs(href="/decks/{{deck._id}}")
            span.fa.fa-external-link
          a.btn.btn-default.btn-xs(href="/decks/{{deck._id}}?edit=true")
            span.fa.fa-pencil
          span &nbsp;
          a.pointer.cursor-pointer(ng-click="selectDeck(deck)")
            {{ deck.title }}
    .panel-footer
      a(ng-click="addExemplaryDeck()")
        span.glyphicon.glyphicon-bell
        |  Add exemplary Deck
.col-xs-4(ng-if="selected.slides.length")
  .panel.panel-primary
    .panel-heading
      h3.panel-title Slajdy: {{selected.title}}
      input.form-control(placeholder="Search...", ng-model='deckSlidesSearch')
    .panel.body.slides-scroll
      ul.list-group(ui-sortable="orderUpdated", ng-model="selectedSlides")
        li.list-group-item.hover-trigger(ng-repeat="slide in selectedSlides | filter: { content: {name: deckSlidesSearch}}")
          mixin slideCell("removeSlideFromDeck(selected, selectedSlides, slide)") 
.col-xs-4
  .panel.panel-primary
    .panel-heading
      h3.panel-title Slajdy
      input.form-control(placeholder="Search...", ng-model='allSlidesSearch')
    .panel.body.slides-scroll 
      ul.list-group
        li.list-group-item.hover-trigger(ng-repeat="slide in slides | filter: { content: {name: allSlidesSearch}}")
          mixin slideCell("removeSlide(slides, slide)")  
          a.pull-right.hover-content.cursor-pointer(ng-click="addSlideToDeck(selected, selectedSlides, slide)")
            span.glyphicon.glyphicon-plus.text-success
            | &nbsp;


