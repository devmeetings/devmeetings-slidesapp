.navbar.navbar-inverse.xplatform-navbar(role='navigation', ng-show="!$root.headerHidden")
    .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-inverse-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

    .navbar-center.input-search(ng-if="!xplatformData.navbar.showTitle")
        img.ico-search(src="static/images/navbar/ico_search.png")
        input(type='text', placeholder='Szukaj szkoleń, ludzi, trenerów...', ng-model='xplatformData.navbar.searchText')
        img.ico-triangle(src="static/images/navbar/input_search_triangle.png")
    .navbar-center(ng-if="xplatformData.navbar.showTitle")
        span.nav-title
            | {{xplatformData.navbar.title}}

    .collapse.navbar-collapse.navbar-inverse-collapse
        ul.nav.navbar-nav.navbar-left
            li
                a(href='#/', 
                    analytics-category='menu',
                    analytics-on='click', analytics-event='navbar.logo')
                    img(src="static/images/navbar/xplatform_logo.png")
        ul.nav.navbar-nav.navbar-right
            li(ng-if='user')
                img.avatar-holder(
                    ng-src='{{user.result.avatar | dmGravatar:30}}', 
                    ui-sref='index.devhero({id: user.result._id})',
                    analytics-category='menu',
                    analytics-on='click', analytics-event='profile.photo')
            li(ng-if='user')
                a.ng-cloak(
                    ui-sref="index.devhero({id: user.result._id})", 
                    analytics-category='menu',
                    analytics-on='click', analytics-event='navbar.profile.text')
                    | {{user.result.name}}
            li(ng-if='!user')
                a.ng-cloak
                    button.btn.btn-xs.btn-primary(ui-sref='index.register') Register
            li(ng-if='!user')
                a.ng-cloak
                    button.btn.btn-xs.btn-success(ui-sref='index.login') Log In
            li(ng-if='user')
                .dropdown
                    #dropdownNav.dropdown-toggle(type='button', data-toggle='dropdown')
                        span.glyphicon.glyphicon-cog
                    ul.dropdown-menu(role='menu', aria-labelledby='dropdownNav')
                        li(role='presentation')
                            a(ui-sref='index.profile', role='menuitem', tabindex='-1', 
                                analytics-category='devhero',
                                analytics-on='click', analytics-event='navbar.editProfile')
                                | Edit Profile
                        li(role='presentation')
                            a(href="/logout", role='menuitem', tabindex='-1', 
                                analytics-category='devhero',
                                analytics-on='click', analytics-event='navbar.logout')
                                | Log Out



