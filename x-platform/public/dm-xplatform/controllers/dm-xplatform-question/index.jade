.dm-questions
  include ../dm-xplatform-question-create/index
  //hr
  .dm-question.clearfix(
    ng-repeat="question in questions | orderBy: '-timestamp'"
    )

    ul.dm-breadcrumb
      li.title(
          ng-class="{'active': isQuestionActive(question) }"
        )
        a
          img.img-rounded(
            alt="{{question.user.name || 'Anonymous' }}"
            title="{{question.user.name || 'Anonymous' }}"
            ng-src="{{question.user.avatar | dmGravatar:24}}"
            )
      li(
        ng-class="{'active': isQuestionActive(question) }"
        )
        a(
          ui-sref='index.space.question({slide: question.slidesave, parent:null})'
          )
          small.pull-right(am-time-ago='question.timestamp')
          span.fa.fa-fw
          span {{question.description}}

    .row
      .col-xs-11.col-xs-offset-1.dm-answers(
        ng-show="isQuestionActive(question)"
        )
        ul.dm-breadcrumb.dm-breadcrumb-left(
          ng-repeat="comment in question.comments"
          )
          li(
            ui-sref-active="active"
            )
            a.text-right(
              ui-sref='index.space.question({slide: comment.slidesave, parent: question.slidesave})'
            )
              small.pull-left(am-time-ago='comment.timestamp')
              span {{comment.text}}
              span.fa.fa-fw
          li.title
            a
              img.img-rounded(
                alt="{{comment.user.name || 'Anonymous' }}"
                title="{{comment.user.name || 'Anonymous' }}"
                ng-src="{{comment.user.avatar | dmGravatar:24}}"
                )

        form(ng-submit='createComment(question)')
          ul.dm-breadcrumb.dm-breadcrumb-flat
            li.title
              a
                img.img-rounded(
                   alt="{{user.result.name }}"
                  title="{{user.result.name }}"
                  ng-src="{{user.result.avatar | dmGravatar:24}}"
                )
            li
              a
                .input-group
                  input.input-sm.form-control(
                    required, 
                    ng-model='question.text', 
                    autofocus, 
                    placeholder="Your Answer")
            li.title
              button.a.btn(
                type="submit"
                )
                span.fa.fa-reply


  // ul.nav.nav-stacked.nav-pills.questions-list
    li(
      ng-repeat='question in questions | orderBy: "-timestamp"', 
      ng-class="{'active': isQuestionActive(question) }"
      )
        a.cursor-pointer(ui-sref='index.space.question({slide: question.slidesave, parent:null})')
              small.pull-right(am-time-ago='question.timestamp')
              span {{question.description}}
          ul.nav.nav-stacked
              li(ng-repeat='comment in question.comments', ui-sref-active="active")
                  a(ui-sref='index.space.question({slide: comment.slidesave, parent: question.slidesave})')
                      span {{comment.text}}
          form(
            ng-submit='createComment(question)' 
            ng-show="isQuestionActive(question)"
            )
              .form-group
                  .input-group
                      input.input-sm.form-control(required, ng-model='question.text', autofocus, placeholder="Write Your Answer Here")
                      span.input-group-btn
                          button.btn.btn-primary.btn-sm(type='submit')
                              span.fa.fa-reply
